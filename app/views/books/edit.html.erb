<div class="container mt-3">
 <div class="row">
  <div class="col-lg-5 mx-auto px-0">
    <h1 class="mb-3">Editing Book</h1>
     <%= form_with model: @book do |f| %>

      <div class="form-group">
       <div class="title-head"><label for="title">Title</label></div>
       <%= f.text_field :title, class: 'border border-1 rounded col-12 input-lg' %>
      </div>

      <div class="form-group">
       <div class="opinion-head"><label for="opinion">Opinion</label></div>
       <%= f.text_area :body, class: 'border border-1 rounded col-12 input-lg' %>
      </div>

     <%= f.submit 'Update Book', class: 'btn btn-success mb-3'%>
     <% end %>

    <%= link_to 'Show', book_path(@book.id) %> |
    <%= link_to 'Back', books_path %>
  </div>
 </div>
</div>


