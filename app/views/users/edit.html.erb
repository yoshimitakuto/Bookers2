<div class="container mt-3">
 <div class="row">
  <div class="col-lg-5 mx-auto px-0">
    <h2 class="mb-3">User info</h2>
    <% if @user.errors.any? %>
      <h3><%= @user.errors.count %> error prohibited this obj from being saved:</h3>
      <ul>
        <% @user.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
     <% end %>
     <%= form_with model: @user do |f| %>

      <div class="form-group">
       <div class="name-head"><label for="inputName">Name</label></div>
       <%= f.text_field :name, id:"inputName", placeholder:"名前", class: 'border border-1 rounded col-12  form-control' %>
      </div>

      <div class="form-group">
       <div class="image-head"><label for="inputimage">Image</label></div>
       <%= f.file_field :profile_image,  placeholder:"プロフィール画像"  %>
      </div>


      <div class="form-group">
       <div class="opinion-head"><label for="inputIntroduction">Introduction</label></div>
       <%= f.text_area :introduction,  class: 'border border-1 rounded col-12 form-control' %>
      </div>

     <%= f.submit 'Update User', class: 'btn btn-secondary mb-3'%>
     <% end %>

  </div>
 </div>
</div>
